extends layout
block content
  main
     .form.addedit
       h2 New Apartment
       form(method="post")
         fieldset 
           label(for="name") Apartment Name:
           input(name="name", type="text", placeholder="Enter an apartment name")
           label(for="city") City:
           input(name="city", type="text", placeholder="Enter a city")
           label(for="address") Address:
           input(name="address", type="text", placeholder="Enter an address")
           label(for="price") Monthly Price:
           input(name="price", type="text", placeholder="Enter a monthly price")
           label(for="description") Description:
           textarea(name='description', placeholder="Enter a description")
           label(for="image") Apartment Image:
           input(name="image", type="text", placeholder="Enter an image")
           button.button(type="submit") Add New Apartment